# Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Server port
PORT=3000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins
# Development example: http://localhost:3000,http://localhost:3002
# Production example: https://yourdomain.com,https://api.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# =============================================================================
# AT PROTOCOL CONFIGURATION
# =============================================================================

# AT Protocol service URL (usually https://bsky.social for Bluesky)
ATPROTO_SERVICE_URL=https://bsky.social

# Default PDS (Personal Data Server) URL if different from service URL
# ATPROTO_PDS_URL=https://bsky.social

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret for session management (if implemented)
# JWT_SECRET=your-super-secret-jwt-key-here

# API rate limiting (requests per minute)
# RATE_LIMIT_REQUESTS=100

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Maximum blob size in bytes (default: 1MB)
# MAX_BLOB_SIZE=1048576

# Maximum blobs per user (0 for unlimited)
# MAX_BLOBS_PER_USER=1000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Application version (automatically set by package.json)
# APP_VERSION=1.0.0

# Git commit hash (set by CI/CD)
# GIT_COMMIT=

# Build timestamp (set by CI/CD)
# BUILD_TIMESTAMP=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# CDN URL for blob delivery (if using a CDN)
# CDN_BASE_URL=https://cdn.yourdomain.com

# Monitoring service URL
# MONITORING_URL=

# Analytics tracking ID
# ANALYTICS_ID=

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable debug mode (development only)
DEBUG=bucket:*

# Mock AT Protocol for testing (development only)
# MOCK_ATPROTO=true

# Development database URL (if using database)
# DEV_DATABASE_URL=sqlite://dev.db
